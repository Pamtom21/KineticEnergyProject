# cinetica
import pygame as PG, ctypes as ct
from pygame.locals import *

Rest = (800,640);  
clock = PG.time.Clock()
principal = True
window = PG.display.set_mode((800,640))

PG.init()

def ventana():
    PG.init()
    PG.mouse.set_visible(True)
    PG.display.set_caption('Calculator By: Vionesa Team')
    return PG.display.set_mode(Rest)

def Load_Image(sFile,transp = False):
    try: image = PG.image.load(sFile)
    except PG.error,message:
           raise SystemExit,message
    image = image.convert()
    if transp:
       color = image.get_at((0,0))
       image.set_colorkey(color,RLEACCEL)
    return image


def Get_Surface(nAncho_X,nAlto_Y):
    return PG.Surface((nAncho_X,nAlto_Y))

def pinta_pantalla():
    panta.blit(Fondo,(000,000))
    return

panta = ventana()
Fondo = Load_Image('fondo.png',False)
Btn_cal = Load_Image('btnC.png', True)

class Botton():
    def __init__(self, x,y,image, scale):
     ancho = image.get_width()
     alto = image.get_height()
     self.image = PG.transform.scale(image, (int(ancho* scale), int(alto*scale )))
     self.rect = self.image.get_rect()
     self.rect.topleft = (x, y)
     self.click = False
     return
 
    def dibuja(self):
     accion = False
     posicion = PG.mouse.get_pos()
     if self.rect.collidepoint(posicion):
        if PG.mouse.get_pressed()[0] == 1 and self.click == False:
            self.click = True
            accion = True
     if PG.mouse.get_pressed()[0] == 0:
        self.click = False 
        accion = False 
 
     panta.blit(self.image, (self.rect.x, self.rect.y))  
     
     return accion


Boton1 = Botton(112,550,Btn_cal,1)



while principal:
 key= PG.key.get_pressed()
 ev = PG.event.get()
 for e in ev:
    if e.type == PG.QUIT : 
        principal = False
    if key[PG.K_ESCAPE]:
        principal = False

 if Boton1.dibuja():
    print('click')



 
 pinta_pantalla()
 Boton1.dibuja()
 Get_Surface(800,640)
 PG.display.flip()
 clock.tick(100)
